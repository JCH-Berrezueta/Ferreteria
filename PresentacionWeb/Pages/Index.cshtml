@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    body {
        background-color: floralwhite; /* Color de fondo floral */
    }

    .text-center {
        text-align: center;
    }

    .display-4 {
        font-size: 2.5rem;
        color: #4caf50; /* Verde */
    }

    p {
        color: #ff9800; /* Naranja */
    }

    .content {
        padding: 20px;
        background-color: #ffffff; /* Fondo blanco para el contenido */
        border-radius: 8px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para darle profundidad */
        margin: 20px auto; /* Centrar el contenido horizontalmente */
        max-width: 800px; /* Ancho máximo para el contenido */
    }

    .banner {
        text-align: center;
        margin-top: 20px;
    }

        .banner img {
            max-width: 100%;
            height: auto; /* Mantiene la proporción de la imagen */
            border-radius: 8px; /* Bordes redondeados para la imagen */
        }

    .login-form {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8f9fa; /* Fondo claro para el formulario */
        border-radius: 8px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para el formulario */
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-block {
        width: 100%;
    }
</style>
<div class="content">
    <div class="text-center">
        <h1 class="display-4">Ferreteria Kialke</h1>
        <p>Cuidamos de tu bolsillo</p>
    </div>

<!-- Agregando la imagen del banner -->
<div class="banner">
    <img src="~/images/banner.jpg" alt="Banner de Ferreteria Kialke" class="img-fluid" />
</div>
