@page
@model PresentacionWeb.Pages.CuentaModel
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<!-- Agregando el formulario de login -->
<div class="login-form">
    <div class="text-center">
        <h2>Login</h2>
    </div>
    <form method="post">
        <div class="form-group">
            <label for="username">Usuario</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
        <button type="reset" class="btn btn-secondary btn-block mt-2">Cancelar</button>
    </form>
</div>

<style>
    .login-form {
        margin-top: 10px;
        padding: 10px;
        background-color: #f8f9fa; /* Fondo claro para el formulario */
        border-radius: 8px; /* Bordes redondeados */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para el formulario */
